{% extends "base.twig" %}

{% block content %}
    <h1>Contact</h1>

    {% if debug %}
        <div class="jumbotron">
            {% for name, value in data %}
                <p><strong>{{name}}:</strong> {{value}}</p>
            {% endfor %}
        </div>
    {% endif %}

    <form action="{{path_for('contact')}}" method="POST">

        <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" type="text" name="name" value="<script>alert('you are hacked')</script>" />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" type="text" name="email" value="exemple@exemple.com" />
        </div>
        
        <div class="form-group">
            <label for="message">Message:</label>
            <textarea class="form-control" name="message">Text here...</textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="submit" class="btn btn-primary"/>
        </div>

    </form>
{% endblock %}